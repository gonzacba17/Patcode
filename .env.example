# ================================
# PATCODE - CONFIGURACIÓN
# ================================
# Copia este archivo como .env y ajusta los valores según tu entorno

# ================================
# OLLAMA - Configuración del LLM
# ================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:7b
OLLAMA_TEMPERATURE=0.7
REQUEST_TIMEOUT=120

# ================================
# MEMORIA - Persistencia
# ================================
MAX_HISTORY_MESSAGES=20
CONTEXT_WINDOW_SIZE=10
MAX_ACTIVE_MESSAGES=10
MAX_MEMORY_FILE_SIZE=5242880
ENABLE_MEMORY_SUMMARIZATION=true

# ================================
# LOGGING - Sistema de logs
# ================================
LOG_LEVEL=INFO
LOG_FILE=logs/patcode.log
ENABLE_FILE_LOGGING=true

# ================================
# VALIDACIÓN - Límites
# ================================
MAX_FILE_SIZE=5000000
MAX_FILES_TO_ANALYZE=100
MAX_DIRECTORY_DEPTH=10
MIN_PROMPT_LENGTH=1
MAX_PROMPT_LENGTH=10000

# ================================
# ANÁLISIS - Cache y features
# ================================
ENABLE_ANALYSIS_CACHE=true
CACHE_EXPIRATION_TIME=3600
ENABLE_SEMANTIC_SEARCH=false
ENABLE_STATIC_ANALYSIS=false

# ================================
# UI - Interfaz de usuario
# ================================
TERMINAL_WIDTH=80
ENABLE_COLORS=true
SHOW_BANNER=true
STREAM_RESPONSES=true
VERBOSE_MODE=false
ENABLE_AUTOCOMPLETE=true

# ================================
# NOTAS
# ================================
# - Copia este archivo como .env y ajusta según tu entorno
# - NUNCA hagas commit del archivo .env al control de versiones
# - Aumenta REQUEST_TIMEOUT si tienes conexión lenta
# - LOG_LEVEL opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL